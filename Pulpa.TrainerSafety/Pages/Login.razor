@page "/login"
@using Pulpa.TrainerSafety.Models
@inject NavigationManager Navigation
@inject HttpClient Http

<PageTitle>Iniciar Sesión - Phishing Trainer</PageTitle>

<link href="css/auth-forms.css" rel="stylesheet" />

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <div class="auth-logo">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                </svg>
            </div>
            <h1 class="auth-title">Bienvenido</h1>
            <p class="auth-subtitle">Inicia sesión para continuar tu entrenamiento</p>
        </div>

        @if (showRegistrationSuccess)
        {
            <div class="success-message">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span>? Cuenta creada exitosamente. Ahora puedes iniciar sesión.</span>
            </div>
        }

        @if (showPasswordResetSuccess)
        {
            <div class="success-message">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span>? Contraseña restablecida correctamente. Puedes iniciar sesión.</span>
            </div>
        }

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="validation-summary">
                <strong>?? Error al iniciar sesión:</strong>
                <p>@errorMessage</p>
            </div>
        }

        <EditForm Model="@model" OnValidSubmit="HandleLogin" class="auth-form">
            <DataAnnotationsValidator />

            <div class="form-group">
                <label class="form-label">
                    Correo electrónico <span class="required">*</span>
                </label>
                <div class="form-input-wrapper has-icon">
                    <span class="form-input-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                        </svg>
                    </span>
                    <InputText @bind-Value="model.Email" 
                               type="email" 
                               class="form-input" 
                               placeholder="tu@email.com"
                               disabled="@isSubmitting"
                               autocomplete="email" />
                </div>
                <ValidationMessage For="@(() => model.Email)" />
            </div>

            <div class="form-group">
                <label class="form-label">
                    Contraseña <span class="required">*</span>
                </label>
                <div class="form-input-wrapper has-icon">
                    <span class="form-input-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                        </svg>
                    </span>
                    <InputText @bind-Value="model.Password" 
                               type="@(showPassword ? "text" : "password")" 
                               class="form-input" 
                               placeholder="Ingresa tu contraseña"
                               disabled="@isSubmitting"
                               autocomplete="current-password" />
                    <button type="button" 
                            class="password-toggle" 
                            @onclick="TogglePasswordVisibility"
                            disabled="@isSubmitting"
                            aria-label="Mostrar/Ocultar contraseña">
                        @if (showPassword)
                        {
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />
                            </svg>
                        }
                        else
                        {
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                            </svg>
                        }
                    </button>
                </div>
                <ValidationMessage For="@(() => model.Password)" />
            </div>

            <div class="form-group">
                <div style="display: flex; justify-content: space-between; align-items: center;">
                    <div class="checkbox-group">
                        <InputCheckbox @bind-Value="model.RememberMe" 
                                       class="form-checkbox" 
                                       id="rememberMe"
                                       disabled="@isSubmitting" />
                        <label for="rememberMe" class="checkbox-label">
                            Recordarme
                        </label>
                    </div>
                    <a href="/forgot-password" class="checkbox-label" style="text-decoration: none; color: var(--primary-color); font-weight: 600;">
                        ¿Olvidaste tu contraseña?
                    </a>
                </div>
            </div>

            <button type="submit" 
                    class="btn-primary @(isSubmitting ? "btn-loading" : "")" 
                    disabled="@isSubmitting">
                @if (isSubmitting)
                {
                    <span class="spinner"></span>
                    <span>Iniciando sesión...</span>
                }
                else
                {
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1" />
                    </svg>
                    <span>Iniciar sesión</span>
                }
            </button>
        </EditForm>

        <div class="auth-divider">
            <span>o</span>
        </div>

        <div class="auth-links">
            <div class="auth-link">
                ¿No tienes una cuenta? <a href="/register">Regístrate gratis</a>
            </div>
            <div class="auth-link" style="font-size: 0.75rem; margin-top: 1rem;">
                Al continuar, aceptas nuestros <a href="/terms" target="_blank">Términos de Servicio</a> y <a href="/privacy" target="_blank">Política de Privacidad</a>
            </div>
        </div>
    </div>
</div>

@code {
    private LoginViewModel model = new();
    private bool isSubmitting = false;
    private bool showPassword = false;
    private string errorMessage = string.Empty;
    private bool showRegistrationSuccess = false;
    private bool showPasswordResetSuccess = false;

    protected override void OnInitialized()
    {
        // Verificar si viene desde registro exitoso
        var uri = Navigation.ToAbsoluteUri(Navigation.Uri);
        var query = uri.Query;
        
        if (query.Contains("registered=true"))
        {
            showRegistrationSuccess = true;
        }

        // Verificar si viene desde reset de contraseña exitoso
        if (query.Contains("reset=true"))
        {
            showPasswordResetSuccess = true;
        }
    }

    private void TogglePasswordVisibility()
    {
        showPassword = !showPassword;
    }

