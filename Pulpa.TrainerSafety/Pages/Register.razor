@page "/register"
@using Pulpa.TrainerSafety.Models
@inject NavigationManager Navigation
@inject HttpClient Http

<PageTitle>Registro - Phishing Trainer</PageTitle>

<link href="css/auth-forms.css" rel="stylesheet" />

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <div class="auth-logo">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                </svg>
            </div>
            <h1 class="auth-title">Crear cuenta</h1>
            <p class="auth-subtitle">Comienza tu entrenamiento de seguridad</p>
        </div>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="validation-summary">
                <strong>?? Error al crear la cuenta:</strong>
                <p>@errorMessage</p>
            </div>
        }

        <EditForm Model="@model" OnValidSubmit="HandleRegister" class="auth-form">
            <DataAnnotationsValidator />

            <div class="form-group">
                <label class="form-label">
                    Nombre <span class="required">*</span>
                </label>
                <div class="form-input-wrapper has-icon">
                    <span class="form-input-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                        </svg>
                    </span>
                    <InputText @bind-Value="model.FirstName" 
                               class="form-input" 
                               placeholder="Ingresa tu nombre"
                               disabled="@isSubmitting" />
                </div>
                <ValidationMessage For="@(() => model.FirstName)" />
            </div>

            <div class="form-group">
                <label class="form-label">
                    Apellido <span class="required">*</span>
                </label>
                <div class="form-input-wrapper has-icon">
                    <span class="form-input-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                        </svg>
                    </span>
                    <InputText @bind-Value="model.LastName" 
                               class="form-input" 
                               placeholder="Ingresa tu apellido"
                               disabled="@isSubmitting" />
                </div>
                <ValidationMessage For="@(() => model.LastName)" />
            </div>

            <div class="form-group">
                <label class="form-label">
                    Correo electrónico <span class="required">*</span>
                </label>
                <div class="form-input-wrapper has-icon">
                    <span class="form-input-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                        </svg>
                    </span>
                    <InputText @bind-Value="model.Email" 
                               type="email" 
                               class="form-input" 
                               placeholder="tu@email.com"
                               disabled="@isSubmitting" />
                </div>
                <ValidationMessage For="@(() => model.Email)" />
            </div>

            <div class="form-group">
                <label class="form-label">
                    Contraseña <span class="required">*</span>
                </label>
                <div class="form-input-wrapper has-icon">
                    <span class="form-input-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                        </svg>
                    </span>
                    <InputText @bind-Value="model.Password" 
                               type="@(showPassword ? "text" : "password")" 
                               class="form-input" 
                               placeholder="Mínimo 8 caracteres"
                               disabled="@isSubmitting"
                               @oninput="OnPasswordInput" />
                    <button type="button" 
                            class="password-toggle" 
                            @onclick="TogglePasswordVisibility"
                            disabled="@isSubmitting">
                        @if (showPassword)
                        {
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />
                            </svg>
                        }
                        else
                        {
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                            </svg>
                        }
                    </button>
                </div>
                <ValidationMessage For="@(() => model.Password)" />
                
                @if (!string.IsNullOrEmpty(model.Password))
                {
                    <div class="password-strength @passwordStrength">
                        <div class="password-strength-label">Fortaleza: @GetPasswordStrengthText()</div>
                        <div class="password-strength-bar">
                            <div class="password-strength-segment @(passwordStrengthScore >= 1 ? "active" : "")"></div>
                            <div class="password-strength-segment @(passwordStrengthScore >= 2 ? "active" : "")"></div>
                            <div class="password-strength-segment @(passwordStrengthScore >= 3 ? "active" : "")"></div>
                            <div class="password-strength-segment @(passwordStrengthScore >= 4 ? "active" : "")"></div>
                        </div>
                    </div>
                }
            </div>

            <div class="form-group">
                <label class="form-label">
                    Confirmar contraseña <span class="required">*</span>
                </label>
                <div class="form-input-wrapper has-icon">
                    <span class="form-input-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </span>
                    <InputText @bind-Value="model.ConfirmPassword" 
                               type="@(showConfirmPassword ? "text" : "password")" 
                               class="form-input" 
                               placeholder="Repite tu contraseña"
                               disabled="@isSubmitting" />
                    <button type="button" 
                            class="password-toggle" 
                            @onclick="ToggleConfirmPasswordVisibility"
                            disabled="@isSubmitting">
                        @if (showConfirmPassword)
                        {
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />
                            </svg>
                        }
                        else
                        {
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                            </svg>
                        }
                    </button>
                </div>
                <ValidationMessage For="@(() => model.ConfirmPassword)" />
            </div>

            <div class="form-group">
                <div class="checkbox-group">
                    <InputCheckbox @bind-Value="model.AcceptTerms" 
                                   class="form-checkbox" 
                                   id="acceptTerms"
                                   disabled="@isSubmitting" />
                    <label for="acceptTerms" class="checkbox-label">
                        Acepto los <a href="/terms" target="_blank">términos y condiciones</a> y la <a href="/privacy" target="_blank">política de privacidad</a>
                    </label>
                </div>
                <ValidationMessage For="@(() => model.AcceptTerms)" />
            </div>

            <div class="form-group">
                <div class="checkbox-group">
                    <InputCheckbox @bind-Value="model.ReceiveNewsletters" 
                                   class="form-checkbox" 
                                   id="newsletters"
                                   disabled="@isSubmitting" />
                    <label for="newsletters" class="checkbox-label">
                        Deseo recibir noticias y actualizaciones por correo
                    </label>
                </div>
            </div>

            <button type="submit" 
                    class="btn-primary @(isSubmitting ? "btn-loading" : "")" 
                    disabled="@isSubmitting">
                @if (isSubmitting)
                {
                    <span class="spinner"></span>
                    <span>Creando cuenta...</span>
                }
                else
                {
                    <span>Crear cuenta</span>
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                    </svg>
                }
            </button>
        </EditForm>

        <div class="auth-links">
            <div class="auth-link">
                ¿Ya tienes una cuenta? <a href="/login">Inicia sesión</a>
            </div>
        </div>
    </div>
</div>

@code {
    private RegisterViewModel model = new();
    private bool isSubmitting = false;
    private bool showPassword = false;
    private bool showConfirmPassword = false;
    private string errorMessage = string.Empty;
    private string passwordStrength = "weak";
    private int passwordStrengthScore = 0;

    private void TogglePasswordVisibility()
    {
        showPassword = !showPassword;
    }

    private void ToggleConfirmPasswordVisibility()
    {
        showConfirmPassword = !showConfirmPassword;
    }

    private void OnPasswordInput(ChangeEventArgs e)
    {
        var password = e.Value?.ToString() ?? string.Empty;
        CalculatePasswordStrength(password);
    }

    private void CalculatePasswordStrength(string password)
    {
        passwordStrengthScore = 0;

        if (password.Length >= 8) passwordStrengthScore++;
        if (password.Any(char.IsUpper)) passwordStrengthScore++;
        if (password.Any(char.IsLower)) passwordStrengthScore++;
        if (password.Any(char.IsDigit)) passwordStrengthScore++;
        if (password.Any(ch => !char.IsLetterOrDigit(ch))) passwordStrengthScore++;

        passwordStrength = passwordStrengthScore switch
        {
            <= 2 => "weak",
            3 or 4 => "medium",
            _ => "strong"
        };
    }

    private string GetPasswordStrengthText()
    {
        return passwordStrength switch
        {
            "weak" => "Débil",
            "medium" => "Media",
            "strong" => "Fuerte",
            _ => "Débil"
        };
    }

    private async Task HandleRegister()
    {
        try
        {
            isSubmitting = true;
            errorMessage = string.Empty;

            // Aquí llamarías a tu API para registrar al usuario
            // var response = await Http.PostAsJsonAsync("api/auth/register", model);
            
            // Simulación de llamada a la API
            await Task.Delay(1500);

            // if (response.IsSuccessStatusCode)
            // {
            //     Navigation.NavigateTo("/login?registered=true");
            // }
            // else
            // {
            //     var error = await response.Content.ReadFromJsonAsync<ErrorResponse>();
            //     errorMessage = error?.Message ?? "Error al crear la cuenta. Por favor, intenta nuevamente.";
            // }

            // Por ahora, redirigimos directamente
            Navigation.NavigateTo("/login?registered=true");
        }
        catch (Exception ex)
        {
            errorMessage = "Error de conexión. Por favor, verifica tu conexión a internet e intenta nuevamente.";
        }
        finally
        {
            isSubmitting = false;
        }
    }
}
